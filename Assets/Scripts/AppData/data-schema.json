{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "The schema for the store data",
  "type": "object",
  "properties": {
    "Software": {
      "type": "array",
      "description": "the array of available softwares",
      "minItems": 1,
      "items": [
        {
          "type": "object",
          "properties": {
            "Name": {
              "type": "string"
            },
            "Description": {
              "type": "string"
            },
            "WasBought": {
              "type": "boolean"
            },
            "Price": {
              "type": "number"
            },
            "Provides": {
              "type": "string"
            }
          },
          "required": [
            "Name",
            "Description",
            "WasBought",
            "Price",
            "Provides"
          ]
        }
      ]
    },
    "Components": {
      "type": "array",
      "description": "the array of available pc components",
      "minItems": 1,
      "items": [
        {
          "type": "object",
          "properties": {
            "Component": {
              "type": "object",
              "properties": {
                "Name": {
                  "type": "string",
                  "description": "the name of the component"
                },
                "LoadUsage": {
                  "type": "integer",
                  "description": "the load usage of the component"
                },
                "Cores": {
                  "type": "integer",
                  "description": "number of cores for the CPU"
                },
                "Speed": {
                  "type": "number",
                  "description": "the speed of one core of the CPU, Network"
                },
                "SpeedType": {
                  "type": "string",
                  "description": "the speed type. Needed for CPU"
                },
                "RamType": {
                  "type": "string",
                  "description": "the ram type. Needed for GPU, RAM"
                },
                "Size": {
                  "type": "number",
                  "description": "the size supported by the component. Needed for GPU, RAM, Hard"
                },
                "SizeType": {
                  "type": "string",
                  "description": "the magnitute of the size. Total size is SizeType*Size. Needed for GPU, RAM, Hard, Network"
                },
                "HardType": {
                  "type": "string",
                  "description": "the type of the Hard. Determines the usage speed"
                },
                "ProvidedLoad": {
                  "type": "integer",
                  "description": "the ammount of Load provided by the source"
                },
                "WirelessType": {
                  "type": "string",
                  "description": "The wireless type. Determines the wireless speed"
                },
                "AllowedCpus": {
                  "type": "integer",
                  "description": "The number of allowed CPUs. Needed for motherboard"
                },
                "AllowedRams": {
                  "type": "integer",
                  "description": "The number of allowed RAMs. Needed for motherboard"
                },
                "AllowedHards": {
                  "type": "integer",
                  "description": "The number of allowed Hards. Needed for motherboard"
                },
                "AllowedGpus": {
                  "type": "integer",
                  "description": "The number of allowed GPUs. Needed for motherboard"
                },
                "AllowedWirelesses": {
                  "type": "integer",
                  "description": "The number of allowed Wireless networks. Needed for motherboard"
                },
                "AllowedNetworks": {
                  "type": "integer",
                  "description": "The number of allowed Networks. Needed for motherboard"
                }
              },
              "required": [
                "Name",
                "LoadUsage"
              ]
            },
            "Description": {
              "type": "string"
            },
            "WasBought": {
              "type": "boolean"
            },
            "Price": {
              "type": "number"
            }
          },
          "required": [
            "Component",
            "Description",
            "WasBought",
            "Price"
          ]
        }
      ]
    }
  },
  "required": [
    "Software",
    "Components"
  ]
}